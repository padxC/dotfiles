;; Order is important
(defcfg
  process-unmapped-keys yes
  concurrent-tap-hold yes
)

(defsrc
  caps grv         
              h j k l
                    , .
)

(deflayer base
  lctl @grv         
              h j k l
                    , .
)

(deflayer vim
  _  _
          left down up rght
                      home end
)

(defalias
  grv (tap-hold-press 200 200 grv (layer-toggle vim))
)
